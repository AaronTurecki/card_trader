<div class="col-md-10 col-md-offset-3">
  <div class="row">
  <div class="col-md-6">
<%= form_for @card do |f| %>
<% if @card.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@card.errors.count, "error") %> prohibited
      this card from being saved:</h2>
    <ul>
    <% @card.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :player_name, class: "form-control", placeholder: "Player Name" %>
  </div>

  <div class="form-group">
    <%= f.text_field :manufacturer, class: "form-control", placeholder: "Card Manufacturer" %>
  </div>

  <div class="form-group">
    <%= f.text_field :year, class: "form-control", placeholder: "Year" %>
  </div>

  <div class="form-group">
    <%= f.text_field :attri, class: "form-control", placeholder: "Card Attributes" %>
  </div>

  <div class="form-group">
    <%= f.text_field :team, class: "form-control", placeholder: "Team" %>
  </div>

  <div class="form-group">
    <%= f.text_field :condition, class: "form-control", placeholder: "Condition" %>
  </div>
 
  <div class="col-sm-4">
    <%= f.submit "Add Card", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>